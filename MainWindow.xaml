        <TextBox x:Name="txtIN" HorizontalAlignment="Left" Height="48" Margin="29,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" KeyUp="txtIN_KeyUp"/>
        <TextBox x:Name="txtM" HorizontalAlignment="Left" Height="49" Margin="310,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" KeyUp="txtM_KeyUp_1"/>
        <TextBox x:Name="txtFT" HorizontalAlignment="Left" Height="48" Margin="310,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" TextChanged="txtFT_TextChanged"/>
        <TextBox x:Name="txtYard" HorizontalAlignment="Left" Height="48" Margin="587,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" KeyUp="txtYard_KeyUp"/>
        <TextBox x:Name="txtInfo" HorizontalAlignment="Left" Height="48
                 " Margin="29,349,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="748"/>
